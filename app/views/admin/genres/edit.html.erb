    <!-- エラーメッセージ -->
    <% if @genre.errors.any? %>
        <div class="alert alert-danger mx-0 mb-4"> 
          <h6 class="alert-heading fw-bold mb-2">
            <%= @genre.errors.count %>件のエラーが発生しました
          </h6>
          <div class="ms-0">
            <% @genre.errors.full_messages.each do |message| %>
              <div class="d-flex align-items-center mb-1">
                <i class="fa-solid fa-circle-exclamation me-2"></i>
                <span><%= message %></span>
              </div>
            <% end %>
          </div>
        </div>
    <% end %>
    
    <h1 class="text-center">ジャンル編集</h1>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_with(model: @genre, url: admin_genre_path(@genre), method: :patch, class: 'form-group') do |f| %>
      <%= f.label :name, "ジャンル名", class: 'form-label' %>
      <div class="input-group mb-3">
        <%= f.text_field :name, class: 'form-control', placeholder: 'ジャンル名を入力してください' %>
        <div class="input-group-append">
          <%= f.submit "更新", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>