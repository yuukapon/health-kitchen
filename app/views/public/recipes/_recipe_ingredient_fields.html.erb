<div class="nested-fields mb-2">
  <div class="d-flex align-items-center">
    <div class="me-2 handle">
      <i class="fa-solid fa-bars" style="color: #999;"></i>
    </div>
    
    <div class="d-flex flex-grow-1 gap-2">
      <!-- 材料名入力フィールド -->
      <div style="width: 60%;">
        <%= f.text_field :ingredient,
            class: "form-control",
            placeholder: "例：玉ねぎ",
            style: "background-color: #FFF7E6;" %>
      </div>
      
      <!-- 数量入力フィールド -->
      <div style="width: 30%;">
        <%= f.text_field :quantity,
            class: "form-control",
            placeholder: "例：1個",
            style: "background-color: #FFF7E6;" %>
      </div>
    </div>

    <div class="ms-2">
      <%= link_to_remove_association f, class: "btn", style: "color: #999;" do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    </div>
  </div>
</div>