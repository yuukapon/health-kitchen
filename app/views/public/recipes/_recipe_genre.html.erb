<div class="nested-fields mb-2">
  <div class="d-flex align-items-center">
    <div class="me-2 handle">
      <i class="fa-solid fa-bars" style="color: #999;"></i>
    </div>
    
    <div class="flex-grow-1">
      <%= f.collection_select :genre_id, Genre.all, :id, :name, 
          { prompt: "ジャンルを選択してください" }, 
          { class: 'form-control', style: "background-color: #FFF7E6;" } %>
    </div>

    <div class="ms-2">
      <%= link_to_remove_association f, class: "btn", style: "color: #999;" do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    </div>
  </div>
</div>