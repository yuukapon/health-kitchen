    <!-- エラーメッセージ -->
    <% if @user.errors.any? %>
        <div class="alert alert-danger mx-0 mb-4"> <!-- mx-0を追加 -->
          <h6 class="alert-heading fw-bold mb-2"> <!-- fw-boldを追加 -->
            <%= @user.errors.count %>件のエラーが発生しました
          </h6>
          <div class="ms-0"> <!-- ms-0を追加 -->
            <% @user.errors.full_messages.each do |message| %>
              <div class="d-flex align-items-center mb-1"> <!-- flexboxを使用 -->
                <i class="fa-solid fa-circle-exclamation me-2"></i>
                <span><%= message %></span>
              </div>
            <% end %>
          </div>
        </div>
    <% end %>
    
    
    
    <div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- タイトル -->
      <h2 class="text-center mb-5">プロフィール編集</h2>
      
      <%= form_with model: @user, local: true do |f| %> 
      
        <!-- プロフィール画像 -->
        <div class="mb-4">
          <div class="form-group">
            <div class="d-flex align-items-center mb-2">
              <span class="badge text-white me-2" style="background-color: #5B9BD5;">任意</span>
              <label class="form-label mb-0">プロフィール画像</label>
            </div>
            <%= f.file_field :profile_image, accept: "image/*", class: "form-control", style: "background-color: #FFF7E6;" %>
          </div>
        </div>

        <!-- 氏名 -->
        <div class="mb-4">
          <div class="form-group">
            <div class="d-flex align-items-center mb-2">
              <span class="badge text-white me-2" style="background-color: #ED7D31;">必須</span>
              <label class="form-label mb-0">氏名</label>
            </div>
            <%= f.text_field :name, 
                class: "form-control",
                style: "background-color: #FFF7E6;",
                value: @user.name,
                placeholder: "例：山田 太郎" %>
          </div>
        </div>

        <!-- 自己紹介 -->
        <div class="mb-4">
          <div class="form-group">
            <div class="d-flex align-items-center mb-2">
              <span class="badge text-white me-2" style="background-color: #5B9BD5;">任意</span>
              <label class="form-label mb-0">自己紹介</label>
            </div>
            <%= f.text_area :introduction,
                class: "form-control",
                style: "background-color: #FFF7E6;",
                rows: 5,
                placeholder: "自己紹介" %>
          </div>
        </div>

        <!-- 更新ボタン -->
        <div class="d-flex flex-column align-items-center justify-content-center mt-5">
          <%= f.submit "更新する", 
              class: "btn btn-lg text-white col-md-4 mb-4", 
              style: "background-color: #ED7D31;" %>
          
          <%= link_to "退会する", 
              withdraw_user_path(@user), 
              method: :patch,
              data: { confirm: "本当に退会しますか？この操作は取り消せません。" },
              class: "btn btn-danger btn-lg col-md-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>