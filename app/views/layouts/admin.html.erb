<html>
  <head>
    <meta charset="UTF-8">
    <title>HealthKitchen 管理者ページ</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/516ecc6ad4.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Bootstrap CSS & JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>

  <body class="d-flex flex-column min-vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <span>
            <%= link_to admin_root_path, class: 'navbar-brand fw-bold d-flex align-items-center', style: 'color: #806000;' do %>
              <i class="fa-solid fa-heart me-2"></i> ヘルスキッチン
            <% end %>
            <p class="fs-6 text-secondary mb-0">健康的な料理を、もっと身近に</p>
          </span>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                  aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center">
              <% if admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to admin_root_path, class: 'nav-link hover-grow', style: 'color: #7F6000;' do %>
                    <i class="fa-solid fa-users me-1"></i> ユーザー一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to admin_recipes_path, class: 'nav-link hover-grow', style: 'color: #7F6000;' do %>
                     <i class="fa-solid fa-book-open me-1"></i> レシピ一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to admin_genres_path, class: 'nav-link hover-grow', style: 'color: #7F6000;' do %>
                    <i class="fa-solid fa-tags me-1"></i> ジャンル管理
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link hover-grow', style: 'color: #7F6000;' do %>
                    <i class="fa-solid fa-right-from-bracket me-1"></i> ログアウト
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <!-- フラッシュメッセージ -->
    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show mb-0">
        <div class="container">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show mb-0">
        <div class="container">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    <% end %>
    <% if flash[:success] %>
      <div class="alert alert-success alert-dismissible fade show mb-0">
        <div class="container">
          <%= flash[:success] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    <% end %>
    <% if flash[:error] %>
    <div class="alert alert-danger alert-dismissible fade show mb-0">
      <div class="container">
        <%= flash[:error] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
    <% end %>
    
    <main class="flex-grow-1">
      <%= yield %>
    </main>

    <!-- フッター -->
    <footer class="mt-auto py-4 bg-light">
      <div class="container">
        <div class="text-center">
          <!-- メールアドレス -->
          <div class="mb-3">
            <a href="mailto:yuukapon0627@gmail.com" class="text-decoration-none" style="color: #7F6000;">
              <p>お気軽にご連絡ください！</p>
              <i class="fa-solid fa-envelope me-2"></i>yuukapon0627@gmail.com
            </a>
          </div>
          
          <!-- 区切り線 -->
          <hr class="mx-auto" style="max-width: 200px; color: #7F6000; opacity: 0.1;">
          
          <!-- コピーライト -->
          <p class="text-secondary small mb-0">
            &copy; 2024 HealthKitchen All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>