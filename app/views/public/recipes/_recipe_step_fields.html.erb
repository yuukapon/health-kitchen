<div class="nested-fields mb-2">
  <div class="d-flex align-items-center">
    <div class="mr-1" >
      <i class="fa-solid fa-bars", style="color: #999;"></i>
    </div>
    <div class="flex-grow-1 d-flex gap-2">
      <%= f.text_area :description, 
          class: "form-control ml-1 col-6",
          placeholder: "例：トマトはざく切り、玉ねぎは5㎜角ほどに切り、鶏むね肉は一口サイズに切る。",
          rows: 5,
          style: "background-color: #FFF7E6;" %>
      
      <%= f.file_field :step_image, 
          accept: "image/*",
          class: "form-control mx-2",
          style: "background-color: #FFF7E6;" %>
    </div>
    <%= link_to_remove_association f, class: "btn", style: "color: #999;" do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
  </div>
    
</div>
