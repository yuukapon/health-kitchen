<div class="nested-fields mb-2">
  <div class="d-flex align-items-start"> 
    <div class="me-2  handle"> 
      <i class="fa-solid fa-bars" style="color: #999;"></i>
    </div>
    
    <div class="d-flex flex-grow-1 gap-2">
      <%= f.text_area :description, 
          class: "form-control",
          placeholder: "例：トマトはざく切り、玉ねぎは5㎜角ほどに切り、鶏むね肉は一口サイズに切る。",
          rows: 5,
          style: "background-color: #FFF7E6; width: 60%;" %> 
      
      <div class="flex-shrink-0" style="width: 30%;">
        <%= f.file_field :step_image, 
            accept: "image/*",
            class: "form-control",
            style: "background-color: #FFF7E6;" %>
      </div>
    </div>

    <!-- 削除ボタン -->
    <div class="ms-2"> 
      <%= link_to_remove_association f, class: "btn", style: "color: #999;" do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    </div>
  </div>
</div>